<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_movie_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/image_view_description" />

    <TextView
        android:id="@+id/title_movie_tv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingEnd="50dp"
        android:paddingLeft="10dp"
        android:text="Tytul filmu"

        android:textSize="18sp"

        android:background="#D9757575"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_iv"
        android:paddingRight="50dp" />

    <TextView
        android:id="@+id/stars_movie_tv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_iv"
        app:layout_constraintRight_toRightOf="@id/image_movie_iv"/>

</android.support.constraint.ConstraintLayout>